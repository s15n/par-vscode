{
  "name": "par-vscode",
  "displayName": "par-vscode",
  "description": "Support for the Par language",
  "version": "0.0.3",
  "publisher": "par-lang",
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/s15n/par-vscode.git"
  },
  "icon": "assets/parrot.png",
  "contributes": {
    "languages": [
      {
        "id": "par",
        "aliases": [
          "Par",
          "par"
        ],
        "extensions": [
          ".par"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "assets/par-icon.png",
          "dark": "assets/par-icon.png"
        }
      }
    ],
    "grammars": [
      {
        "language": "par",
        "scopeName": "source.par",
        "path": "./syntaxes/par.tmLanguage.json"
      },
      {
        "scopeName": "markdown.par.codeblock",
        "path": "./syntaxes/par.codeblock.json",
        "injectTo": [
          "text.html.markdown"
        ],
        "embeddedLanguages": {
          "meta.embedded.block.par": "par"
        }
      }
    ],
    "configurationDefaults": {
      "[par]": {
        "editor.tabSize": 2,
        "editor.formatOnSave": true
      }
    },
    "snippets": [
      {
        "language": "par",
        "path": "./snippets.json"
      }
    ],
    "commands": [
      {
        "command": "par.restartServer",
        "title": "Restart Par Server",
        "category": "Par"
      }
    ],
    "configuration": {
      "title": "Par",
      "properties": {
        "par.path": {
          "type": "string",
          "default": null,
          "description": "A path to the Par executable. By default, the extension looks for par in the PATH, but if set, will use the path specified instead.",
          "scope": "machine"
        }
      }
    }
  },
  "activationEvents": [],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b --noEmit && esbuild src/extension.ts --bundle --platform=node --external:vscode --outfile=out/extension.js --format=cjs --sourcemap && scripts/process-yaml.mjs",
    "watch": "concurrently -n 'type,esb,yaml' 'tsc -b -w --noEmit' \"esbuild src/extension.ts --bundle --platform=node --external:vscode --outfile=out/extension.js --format=cjs --sourcemap --watch\" 'scripts/process-yaml.mjs -w'",
    "vsce:verify": "vsce ls --no-yarn",
    "vsce:package": "vsce pack --no-yarn",
    "vsce:publish": "vsce publish --no-yarn"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.13.11",
    "@types/vscode": "^1.98.0",
    "@types/which": "^3.0.4",
    "@vscode/vsce": "^3.3.0",
    "concurrently": "^9.2.0",
    "esbuild": "^0.23.0",
    "glob": "^11.0.1",
    "js-yaml": "^4.1.0",
    "mocha": "^11.1.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.2",
    "vscode-languageclient": "^9.0.1",
    "vscode-test": "^1.6.1",
    "which": "^5.0.0"
  }
}
